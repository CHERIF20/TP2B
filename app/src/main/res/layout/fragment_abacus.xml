<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="44dp"
    android:padding="16dp">

    <!-- Première SeekBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/first_seekbar_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginEnd="8dp" />

        <SeekBar
            android:id="@+id/first_seekbar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:max="8" />

        <TextView
            android:id="@+id/first_seekbar_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/first_seekbar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur: 1"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Deuxième SeekBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/second_seekbar_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginEnd="8dp" />

        <SeekBar
            android:id="@+id/second_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="10" />

        <TextView
            android:id="@+id/second_seekbar_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/second_seekbar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur: 2"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Résultat SeekBar -->
    <SeekBar
        android:id="@+id/result_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20"
        android:enabled="false" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur: "
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

</LinearLayout>
